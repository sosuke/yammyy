<UserControl x:Class="Yammer.Client.MoreInformationPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="50" Width="373">
	<Canvas x:Name="canvas" Opacity="0.8" RenderTransformOrigin="0.5,0.5">
		<Canvas.RenderTransform>
			<TransformGroup>
				<ScaleTransform ScaleX="1" ScaleY="1"/>
				<SkewTransform AngleX="0" AngleY="0"/>
				<RotateTransform Angle="0"/>
				<TranslateTransform X="0" Y="0"/>
			</TransformGroup>
		</Canvas.RenderTransform>
		<Rectangle Width="373" Height="42" Stroke="{x:Null}" RadiusY="0" RadiusX="0">
			<Rectangle.Fill>
				<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
					<GradientStop Color="#FFEEEEEE" Offset="0.451"/>
					<GradientStop Color="#FF9F9F9F" Offset="0.996"/>
					<GradientStop Color="#FEBFBFBF" Offset="0.009"/>
				</LinearGradientBrush>
			</Rectangle.Fill>
		</Rectangle>

		<TextBlock Width="357" Height="23" Canvas.Left="8" Canvas.Top="10" Text="Load the previous 20 updates." TextWrapping="Wrap" x:Name="TbMessageLabel" FontFamily="Meiryo" FontSize="14" Foreground="#FF5B5B5B" TextAlignment="Center" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontWeight="Bold"/>


  </Canvas>
</UserControl>
